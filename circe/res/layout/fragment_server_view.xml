<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    >
    

    
    <LinearLayout 
        android:id="@+id/server_view_control_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_alignParentBottom="true"
        
        >
	    <EditText
	        android:id="@+id/server_view_chat_input"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
			android:layout_weight="7"
	        android:inputType="textCapSentences"
	        android:textColor="#FFFFFF"
	        android:background="@drawable/edit_text_holo_dark"
	         />
	    <Button 
	        android:id="@+id/server_view_send_button"
			android:layout_weight="3"
			android:layout_height="wrap_content"
			android:layout_width="0dp"
			android:textColor="#FFFFFF"
			android:text="@string/button_send"
	        
	        />
    </LinearLayout>
    
	<ListView android:id="@id/android:list"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFFFFF"
		android:layout_above="@id/server_view_control_container"
		android:transcriptMode="normal"
		android:stackFromBottom="true"
		/>

</RelativeLayout>
